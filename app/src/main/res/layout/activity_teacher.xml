<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Add labels for the Spinners -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_marginTop="30sp"
            android:layout_height="wrap_content"
            android:gravity="clip_horizontal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#878484"
            android:text="Select Year:"
            android:padding="8dp" />

        <Spinner
            android:id="@+id/spinnerSemester123"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF4081"
            android:popupBackground="#FBE7D5"
            android:padding="12dp"
            android:prompt="@string/select_year_prompt"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_marginTop="30sp"
            android:layout_height="wrap_content"
            android:gravity="clip_horizontal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#878484"
            android:text="Select Branch:"
            android:padding="12dp"
            />

        <Spinner
            android:id="@+id/spinnerBranch46"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FF4081"
            android:popupBackground="#FBE7D5"
            android:padding="9dp"
            android:prompt="@string/select_branch_prompt" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/search_button_label"
            android:paddingTop="12dp"/>

        <!-- Add a loading indicator (ProgressBar) -->
        <ProgressBar
            android:id="@+id/loadingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <ListView
            android:id="@+id/studentListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:visibility="gone" />

        <!-- Add an Empty state view -->
        <TextView
            android:id="@+id/emptyStateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No students found matching the selected criteria"
            android:visibility="gone" />

</LinearLayout>
